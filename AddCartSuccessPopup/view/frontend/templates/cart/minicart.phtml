                                <li><?= __('Pack:'); ?> <?php $n41product->GetPrepackBox($grouped);?></li>
                            <?php endif; ?>
                        <?php endif; ?>

                        <?php
                        if(!$product->isSalable()){
                            echo "<div class='stock-warning'>OUT OF STOCK</div>";
